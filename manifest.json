{
  "manifest_version": 3,
  "name": "MyInterface",
  "version": "1.0",
  "description": "Interace customizer",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action":{
    "default_icon":{
      "16":"icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "default_title":"Customize interface"
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "permissions": [
    "activeTab", "scripting", "storage"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["popup.html", "styles.css", "content.js", "closeicon2.png"],
      "matches": ["<all_urls>"]
    }
  ]
}